<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RassavadaNew.AuthPages.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:forms="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    BackgroundImageSource="Group83.png"
    NavigationPage.HasBackButton="False"
    NavigationPage.HasNavigationBar="False"
    mc:Ignorable="d">
    <ContentPage.Content>

        <StackLayout>
            <StackLayout Margin="0,75,0,0">
                <StackLayout>
                    <Image
                        HeightRequest="160"
                        Source="icon.png"
                        WidthRequest="126" />
                </StackLayout>
                <StackLayout Margin="0,50,0,0">
                    <Label
                        FontSize="25"
                        HorizontalOptions="Center"
                        Text="WELCOME!"
                        TextColor="#000000"
                        VerticalOptions="CenterAndExpand">
                        <Label.FontFamily>
                            <OnPlatform x:TypeArguments="x:String">
                                <On Platform="Android" Value="Poppins-SemiBold.ttf" />
                            </OnPlatform>
                        </Label.FontFamily>
                    </Label>
                </StackLayout>
                <StackLayout Margin="0,15,0,0">
                    <Label
                        FontAttributes="Bold"
                        FontFamily="Poppins-Regular.ttf"
                        FontSize="15"
                        HorizontalOptions="Center"
                        Text="Make a Log in with social media accounts"
                        TextColor="#000000"
                        VerticalOptions="CenterAndExpand" />
                </StackLayout>
            </StackLayout>

            <StackLayout Margin="0,50,0,0">
                <forms:SvgCachedImage
                    HeightRequest="57"
                    Source="fb1.svg"
                    WidthRequest="269">
                    <!--<forms:SvgCachedImage.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="Login" />
                    </forms:SvgCachedImage.GestureRecognizers>-->
                </forms:SvgCachedImage>

            </StackLayout>
            <StackLayout Margin="0,20,0,0">



                <forms:SvgCachedImage
                    HeightRequest="57"
                    Source="google1.svg"
                    WidthRequest="269">
                    <!--<forms:SvgCachedImage.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="Login" />
                    </forms:SvgCachedImage.GestureRecognizers>-->
                </forms:SvgCachedImage>

            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>